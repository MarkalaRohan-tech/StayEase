<% layout("/layouts/boilerplate")%>
<body style="overflow-x: hidden;">
    <br><br><br>
<div class="container-fluid wrapper px-2">
    <div class="home-one">
        <div class="row home-row">
            <div class="col-12 col-md-4 home-bg-one d-flex flex-wrap justify-content-center">
                <% for(let i=1; i<=28; i++) { %>
                    <img class="bgImg m-2" src="/images/bg (<%= i %>).jpg" width="100%" style="max-width: 350px; height: auto;">
                <% } %>
            </div>
            <div class="col-12 col-md-4 home-bg-two d-flex flex-wrap justify-content-center">
                <% for(let i=28; i>=1; i--) { %>
                    <img class="bgImg m-2" src="/images/bg (<%= i %>).jpg" width="100%" style="max-width: 350px; height: auto;">
                <% } %>
            </div>
            <div class="col-12 col-md-4 home-bg-three d-flex flex-wrap justify-content-center">
                <% for(let i=11; i<=28; i++) { %>
                    <img class="bgImg m-2" src="/images/bg (<%= i %>).jpg" width="100%" style="max-width: 350px; height: auto;">
                <% } %>
            </div>
        </div>

        <div class="home-overlay text-center my-4">
            <img class="homeLogo img-fluid" src="/images/logo3.png" alt="Logo" style="max-width: 200px;">
            <h1 class="homeHeader mt-3">Check-in to comfort, Checkout with ease.</h1>
        </div>
    </div>

    <div class="gif block text-center">
        <dotlottie-player src="https://lottie.host/0ef775d3-9e44-44d5-b158-dc4511a657da/sirHseMgtl.lottie" background="transparent" speed="1" style="width: 100%; max-width: 500px; height: auto;" loop autoplay></dotlottie-player>
        <h2 class="fw-bold mt-4">Tired of looking for place to stay while touring?</h2>
        <h2>Try using StayEase</h2>
        <ul class="list-unstyled px-3" style="font-size: 17px; text-align: justify;">
            <li>👍 Variety of place</li>
            <li>👍 Affordable Prices</li>
            <li>👍 International Options</li>
            <li>👍 Ease of Checkin/Checkout</li>
            <li>👍 Connect with host</li>
        </ul>

        <div class="feature-highlights block text-center mt-4">
            <h2 class="fw-bold">What Makes Us Different?</h2>
            <ul class="list-unstyled px-3" style="font-size: 17px; text-align: justify;">
                <li>✔️ 100% Verified Properties</li>
                <li>✔️ Multilingual Customer Support</li>
                <li>✔️ No Hidden Fees</li>
                <li>✔️ Easy Cancellation Policies</li>
                <li>✔️ Tailored Recommendations</li>
            </ul>
        </div>
    </div>

    <div class="about-section block text-center mt-5">
        <h1 class="heading">Why StayEase?</h1>
        <br>
        <p class="mx-auto px-2" style="font-size: 18px; max-width: 900px; line-height: 1.8;">
            StayEase isn’t just another rental platform—it’s your smart travel companion. Whether you're a solo traveler, a digital nomad, or planning a family getaway, StayEase helps you find the perfect home away from home with ease.
        </p>
        <br>
        <p class="mx-auto px-2" style="font-size: 18px; max-width: 900px; line-height: 1.8;">
            We offer a wide variety of properties across countries, with features and amenities curated for comfort, safety, and style. With verified listings, transparent pricing, and a host-friendly system, StayEase simplifies your booking experience while keeping it secure and trustworthy.
        </p>
        <br>
        <p class="mx-auto px-2" style="font-size: 18px; max-width: 900px; line-height: 1.8;">
            Our goal? To help you check in to comfort—and check out with unforgettable memories.
        </p>
    </div>

    <hr><br>

    <div class="reviewList text-center">
        <h1 class="heading block">Review</h1>
        <div class="row justify-content-center">
            <% const reviews = [
                { img: 1, stars: '⭐⭐⭐⭐⭐', text: 'StayEase offers an excellent selection...', name: 'Michael T.' },
                { img: 2, stars: '⭐⭐⭐⭐⭐', text: 'I recently booked a vacation home...', name: 'Emma R.' },
                { img: 3, stars: '⭐⭐⭐⭐', text: 'StayEase offers an excellent selection...', name: 'Michael T.' },
                { img: 2, stars: '⭐⭐⭐', text: 'The booking process was seamless...', name: 'Sophie L.' },
                { img: 1, stars: '⭐⭐⭐⭐', text: 'I was hesitant to try a new platform...', name: 'Daniel W.' }
            ]; %>

            <% reviews.forEach(r => { %>
                <div class="col-12 col-md-6 col-lg-4 mb-4 reviewPosted block px-3">
                    <img src="/images/profile (<%= r.img %>).jpg" class="rounded-circle" height="100" width="100" alt="Reviewer">
                    <p><%= r.stars %><br><%= r.text %><br><b><span>— <%= r.name %></span></b></p>
                </div>
            <% }) %>
        </div>
    </div>

    <br>
    <div class="row text-center">
        <div class="col-12 col-md-5 mb-3 mx-auto">
            <form action="/signup">
                <button class="btn btn-warning w-100" style="font-size: 20px; box-shadow: 2px 2px 3px black; border-radius: 15px;">Signup</button>
            </form>
        </div>
        <div class="col-12 col-md-5 mb-3 mx-auto">
            <form action="/login">
                <button class="btn btn-warning w-100" style="font-size: 20px; box-shadow: 2px 2px 3px black; border-radius: 15px;">Login</button>
            </form>
        </div>
    </div>
</div>
<br><br>
</body>
